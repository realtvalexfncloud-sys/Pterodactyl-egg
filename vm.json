{
  "_comment": "Linux Mini-VM Egg mit GitHub vm.sh Download",
  "meta": {
    "version": "PTDL_v2",
    "update_url": null
  },
  "name": "Linux VM (Ubuntu/Debian)",
  "author": "ReaLTValexFN_Cloud",
  "description": "Mini-VM Container, w√§hlbare Linux OS-Version, vm.sh wird automatisch von GitHub geladen und gestartet",
  "features": null,
  "docker_images": {
    "Ubuntu 22.04": "ubuntu:22.04",
    "Debian 12": "debian:12"
  },
  "startup": "bash /home/container/vm.sh",
  "scripts": {
    "installation": {
      "script": "curl -fsSL https://raw.githubusercontent.com/realtvalexfncloud-sys/Pterodactyl-egg/main/vm.sh -o /home/container/vm.sh && chmod +x /home/container/vm.sh",
      "container": "ubuntu:22.04",
      "entrypoint": "bash"
    }
  },
  "variables": [
    {
      "name": "Custom OS Image",
      "description": "Optional: eigenes Docker-Image, z.B. debian:bookworm oder ubuntu:20.04",
      "env_variable": "CUSTOM_IMAGE",
      "default_value": "",
      "user_viewable": true,
      "user_editable": true,
      "rules": "nullable|string|max:100"
    },
    {
      "name": "VM Script URL",
      "description": "Link zu vm.sh auf GitHub",
      "env_variable": "VM_SCRIPT_URL",
      "default_value": "https://raw.githubusercontent.com/realtvalexfncloud-sys/Pterodactyl-egg/main/vm.sh",
      "user_viewable": true,
      "user_editable": true,
      "rules": "nullable|string|max:200"
    }
  ]
}
